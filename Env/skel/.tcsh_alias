# Aliases.
alias d     'cd'
alias df    'df -h'
alias du    'du -h'
alias h     'history'
alias hgrep 'history | grep \!* | head -n -1'
alias l     'less'
alias lsl   'ls -l'
alias ok    'okular \!* >& /dev/null &'
alias pop   'popd'
alias push  'pushd'
alias v     'vim'
alias vdiff 'gvimdiff -R'
alias vgrep  vim '`grep -l \!*`'
