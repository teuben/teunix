#! /bin/csh -f
#
#    locate on the backup's

if ($#argv == 0) exit

#set log=/tmp/blocate$$.log
set log=/tmp/blocate`date +%Y%m%d_%H%M%S`.log
echo "# $*" > $log
chmod 600 $log
cd ~/teunix/Backup
./do_locate $* | tee -a $log

echo Copy of output in $log
echo "number of lines: " `cat $log | grep -v ^\# | wc -l`
