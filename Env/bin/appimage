#! /bin/bash
#
#   helper script to run AppImages

if [ -z "$TMPDIR" ]; then
    export TMPDIR=$HOME/tmp
fi
adir=$HOME/AppImages


if [ ! -d $adir ]; then
    echo "Warning: $adir does not exist, put your AppImage files in here"
    exit 0
fi

app=$1
shift

if [ -z "$app" ]; then
    ls -1 $adir
elif [ -e "$adir/$app" ]; then
    exec /usr/bin/time $adir/$app $*
fi
