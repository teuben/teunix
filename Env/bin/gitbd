#! /usr/bin/env bash
#
#   cleanup branches

echo Cleanup Branches $*
# git branch -r

log=/tmp/gitbd_$$.log

for b in $*; do
  echo Branch $b
  git branch -r | grep -w $b > $log
  nb=$(cat $log | wc -l)
  if [ $nb = 1 ]; then
      git branch -d $b
      git push origin --delete $b
  else
      echo Cannot delete $b:
      cat $log
  fi
done

echo $log

rm -f $log
